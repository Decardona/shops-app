{
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 120,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "tabWidth": 2,
                "parser": "html",
                "htmlWhitespaceSensitivity": "ignore"
            }
        },
        {
            "files": ["*.php"],
            "options": {
                "tabWidth": 2,
                "parser": "php"
            }
        }
    ]
}
